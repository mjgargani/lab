{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "xo"
  ],
  "overrides": [
    {
      "extends": [
        "xo-typescript",
        "prettier"
      ],
      "files": [
        "*.ts",
        "*.tsx"
      ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks",
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "camelcase": "error",
    "spaced-comment": "error",
    "quotes": [
      "error",
      "single"
    ],
    "no-duplicate-imports": "error",
    "@typescript-eslint/naming-convention": "off"
  },
  "settings": {
    "import/resolver": "typescript",
    "react": {
      "version": "detect"
    }
  }
}